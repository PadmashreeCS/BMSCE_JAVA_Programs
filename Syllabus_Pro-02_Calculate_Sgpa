import java.util.*;

class Main
{
    public static void main(String[] args)
    {
        Student st = new Student();
        st.accept();
        st.sgpa_calculate();
        st.display();
    }
}

class Student
{
    int no_subjects;
    int[] credit;
    int[] gradePoint;
    double totalCreditMarks;
    double totalCredits;
    double sgpa;

    Scanner sc = new Scanner(System.in);

    void accept()
    {
        System.out.print("Enter number of subjects: ");
        no_subjects = sc.nextInt();

        credit = new int[no_subjects];
        gradePoint = new int[no_subjects];

        for (int i = 0; i < no_subjects; i++)
        {
            System.out.print("Enter credits of subject " + (i + 1) + ": ");
            credit[i] = sc.nextInt();
        }

        System.out.println("---------------------");

        for (int i = 0; i < no_subjects; i++)
        {
            System.out.print("Enter grade point of subject " + (i + 1) + ": ");
            gradePoint[i] = sc.nextInt();
        }
    }

    void sgpa_calculate()
    {
        totalCreditMarks = 0;
        totalCredits = 0;

        for (int i = 0; i < no_subjects; i++)
        {
            totalCreditMarks += credit[i] * gradePoint[i];
            totalCredits += credit[i];
        }

        sgpa = totalCreditMarks / totalCredits;
    }

    void display()
    {
        System.out.printf("SGPA: %.2f", sgpa);
    }
}
